server {
    listen 8080;

    root /var/www;
    
    location ~ \.jpg$ {
        # Всё что заканчивается на .jpg отдаём напрямую
        try_files $uri =404;
    }

    location / {
        # Все остальные запросы отправляем на HAProxy
        proxy_pass http://127.0.0.1:8088;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
